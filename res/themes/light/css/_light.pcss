$muted-fg-color: #616161;
$light-fg-color: #747474;
$focus-bg-color: $preview-widget-bar-color;
$info-plinth-bg-color: #f7f7f7;
$event-selected-color: #f5f5f5;
$topleftmenu-color: #212121;
$roomtopic-color: #9e9e9e;
$spacePanel-bg-color: rgba(232, 232, 232, 0.77);
$panel-gradient: rgba(248, 248, 248, 0), rgba(248, 248, 248, 1);
$h3-color: #424242;
$event-highlight-bg-color: transparent;
